solvers
{
    phi
    {
        solver           GAMG;
        tolerance        1e-11;
        relTol           0;
        smoother         DIC;
        maxIter          100;
    }

    lambda
    {
        solver           PBiCGStab;
        preconditioner   DILU;
        tolerance        1e-11;
        relTol           0;
    }
}


PHI
{
    phiRefCell        0;
    phiRefValue       0;
}

PISO
{
    nIteration      0;
    nCorrectors    	1;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}

relaxationFactors
{
    lambda               0.8;
//    phi                 0.8;      // within the ESI2106 version, phi is not relaxed due to the code itself 
                                    // setReference adds the given reference value (phi_[id] - iDot*relax_) on the diagonal on the lhs and also to the RHS as source -> 0 sum
}


